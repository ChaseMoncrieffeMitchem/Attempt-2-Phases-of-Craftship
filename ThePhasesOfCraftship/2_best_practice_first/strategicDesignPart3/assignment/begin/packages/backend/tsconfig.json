{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node","jest", "../../node_modules/.prisma/client"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./", 
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "prepareEnv.ts", "../shared/src/marketing"],
  "exclude": ["src/**/*.spec.ts"]
}
